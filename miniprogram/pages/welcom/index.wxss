/* pages/welcom/index.wxss */
page {
  background-color: #ffffff;
}

#canvas {
  width: 300px;
  height: 300px;
}

.canvas_container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 10;
  animation: change-colors 3s infinite;
  overflow: hidden;
  border-radius: 40rpx;
  left: 0;
  top: 0;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  transition: 500ms;
  transform: scale(2.5);
}

.avatar:active {
  transform: scale(5);
}

.btn {
  width: 100%;
  padding: 7rpx 14rpx;
  height: 70rpx;
  border-radius: 10rpx;
  line-height: 70rpx;
  background: #f5f5f5;
  color: #FCA417;
  display: block;
  text-align: center;
}

.btn:active {
  opacity: 0.8;
}

.primaryBtn {
  color: #ffffff;
  background-color: #FCA417;
}

.changeIcon {
  position: fixed;
  z-index: 3;
  border-radius: 50%;
  /* opacity: 0.6; */
  backdrop-filter: blur(100rpx);
  border: 1rpx solid #00000020;
  background-size: cover;
  background-image: url(data:image/svg+xml;base64,);
}

page::before {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.5;
  opacity: 0;
  animation: show 2s alternate-reverse ease-in-out infinite;
}

.container {
  opacity: 0;
  animation: show 300ms 100ms forwards;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
}

.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.piecs {
  /* opacity: 0.8; */
  animation: flow 1s 100ms alternate-reverse infinite ease-in-out;
  margin-top: 200rpx;
  width: 120px;
  height: 90px;
  margin-left: 10%;
  background-size: cover;
  background-image: url(data:image/svg+xml;base64,);
}

.welcom {
  font-weight: bolder;
  font-family: sans-serif;
  width: 80%;
  display: flex;
  align-items: center;
  gap: 30rpx;
  font-size: 60rpx;
  margin: 0rpx auto 20rpx auto;
}

.tips .content {
  margin: 30rpx;
  margin-top: 50rpx;
  color: #ffffff;
}

.tips {
  pointer-events: auto;
  height: 400rpx;
  width: 100%;
  background-color: #07C160;
  border-radius: 30rpx 30rpx 0 0;
}

.slogan {
  font-weight: bolder;
  font-family: sans-serif;
  width: 80%;
  font-size: 40rpx;
  letter-spacing: 1rpx;
  padding: 20rpx;
  border-radius: 30rpx;
  color: #FCA417;
  margin: auto;
  margin-top: -20rpx;
}

.dsc {
  word-break: break-all;
  width: 80%;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  padding: 10rpx;
  border-radius: 30rpx;
  color: #00000050;
  margin: auto;
  margin-top: -20rpx;
}

.form {
  width: 80%;
  margin: auto;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
}

input {
  height: 80rpx;
  background: #f5f5f550;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border: 5rpx solid #00000010;
}

input:focus {
  border: 2rpx solid #FCA41750;
}

.form .title {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #000000;
}

.icon {
  border-radius: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

@keyframes flow {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(-10rpx);
  }
}

@keyframes change-colors {
  0% {
    background-color: red;
  }

  25% {
    background-color: green;
  }

  50% {
    background-color: blue;
  }

  75% {
    background-color: chocolate
  }

  100% {
    background-color: purple;
  }
}

@import 'index-wxa-auto-dark.wxss'